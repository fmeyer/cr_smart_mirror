gem 'treetop-dcf'

gem 'puma'
gem 'foreman'


group :development, :test do 
    gem 'pry'
    gem 'web-console'
    gem 'capybara'

    gem 'rspec'
    gem 'rspec-rerun'
    gem 'rspec-legacy_formatters'

    gem 'guard'
    gem 'guard-rspec'
    gem 'guard-livereload'

    gem 'rack-livereload'

    gem 'timecop'
    gem 'simplecov', :require => false
end


